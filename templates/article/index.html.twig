{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for article in pagination %}
                <div class="col-md-4">
                    <h4>{{ article.title }}</h4>
                    <p>{{ article.content|truncate(100) }}</p>
                    <div class="clearfix">
                        <div class="text-info float-left">{{ article.createdAt|date('d.m.Y') }}</div>
                        <div class="text-info float-right">
                            <i class="fas fa-eye"></i> 0
                            <i class="fas fa-comment"></i> 0
                            <i class="fas fa-thumbs-up"></i> 0
                        </div>
                    </div>
                    <p><a class="btn btn-sm btn-outline-info" href="{{ path('article_show', {slug:article.slug}) }}" role="button">Read more Â»</a></p>
                </div>
            {% else %}
                <h2>No articles found</h2>
            {% endfor %}
        </div>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
