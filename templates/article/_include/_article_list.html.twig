<div class="row">
    {% for article in pagination %}
        <div class="col-md-12 pb-4">
            <h3 class="font-weight-bold pb-2">
                <a href="{{ path('article_show', {slug:article.slug}) }}" class="text-black" style="text-decoration: none;color:#0b2e13">
                    {{ article.title }}
                </a>
            </h3>
            <p class="text-info small">
                <span class="border px-1 rounded">{{ article.tags|join('</span> <span class="border px-1 rounded">')|raw }}</span>
            </p>
            <p>{{ article.content|truncate(400)|raw }}</p>
            <div class="clearfix">
                <div class="float-left">
                    <a class="btn btn-sm btn-outline-info" href="{{ path('article_show', {slug:article.slug}) }}" role="button">Read more&nbsp;&nbsp;<i class="fa fa-angle-double-right"></i></a>
                </div>
                <div class="float-right">
                    <ul class="icons-inline text-info small">
                        <li>{{ article.author.firstname }} <a href="{{ path('user_profile', {email:article.author.username}) }}">@{{ article.author.username }}</a></li>
                        <li>{{ article.createdAt|date('d.m.Y') }}</li>
                        <li><i class="fas fa-bookmark"></i><span>0</span></li>
                        <li><i class="fas fa-eye"></i><span>0</span></li>
                        <li><i class="fas fa-comment"></i><span>{{ article.comments|length }}</span></li>
                        <li><i class="fas fa-thumbs-up"></i> {{ article.likes }}</li>
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        <h6 class="col-md-12 pb-4">No articles found</h6>
    {% endfor %}
</div>
{{ knp_pagination_render(pagination, null, {}, {
    'position': 'centered',
    'rounded': true
}) }}